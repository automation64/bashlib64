# shellcheck source=bin/dev-set
source ./bin/dev-set || { echo 'dev-set:Error: unable to load dev environment' 2>&1 && exit 1; }
# shellcheck source-path=lib/bl64
source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-txt.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-fmt.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-fs.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-core.bash" || exit 1

declare MY_PROFILE="${1:-}"

function dev_create() {
  bl64_dbg_app_show_function
  bl64_fs_dir_create "$BL64_VAR_DEFAULT" "$BL64_VAR_DEFAULT" "$BL64_VAR_DEFAULT" \
    "${DEV_PATH_BUILD}/${DEV_BASE_PROFILE}" \
    "${DEV_PATH_ETC}/${DEV_BASE_PROFILE}" \
    "${DEV_PATH_LOGS}/${DEV_BASE_PROFILE}" \
    "${DEV_PATH_TMP}/${DEV_BASE_PROFILE}" \
    "${DEV_PATH_VAR}/${DEV_BASE_PROFILE}" \
    "${DEV_PATH_VAULT}/${DEV_BASE_PROFILE}" \
    "${DEV_PATH_BUILD}/${DEV_BASE_PROFILE}/${MY_PROFILE}" \
    "${DEV_PATH_BUILD}/${DEV_BASE_PROFILE}/${MY_PROFILE}/prepare" \
    "${DEV_PATH_BUILD}/${DEV_BASE_PROFILE}/${MY_PROFILE}/staging" \
    "${DEV_PATH_BUILD}/${DEV_BASE_PROFILE}/${MY_PROFILE}/pack" \
    "${DEV_PATH_ETC}/${DEV_BASE_PROFILE}/${MY_PROFILE}" \
    "${DEV_PATH_LOGS}/${DEV_BASE_PROFILE}/${MY_PROFILE}" \
    "${DEV_PATH_TMP}/${DEV_BASE_PROFILE}/${MY_PROFILE}" \
    "${DEV_PATH_VAR}/${DEV_BASE_PROFILE}/${MY_PROFILE}" \
    "${DEV_PATH_VAULT}/${DEV_BASE_PROFILE}/${MY_PROFILE}" &&
    bl64_fs_run_touch \
    "${DEV_PATH_BUILD}/${DEV_BASE_PROFILE}/${MY_PROFILE}/${DEV_BASE_GITKEEP}" \
    "${DEV_PATH_ETC}/${DEV_BASE_PROFILE}/${MY_PROFILE}/${DEV_BASE_GITKEEP}" \
    "${DEV_PATH_LOGS}/${DEV_BASE_PROFILE}/${MY_PROFILE}/${DEV_BASE_GITKEEP}" \
    "${DEV_PATH_TMP}/${DEV_BASE_PROFILE}/${MY_PROFILE}/${DEV_BASE_GITKEEP}" \
    "${DEV_PATH_VAR}/${DEV_BASE_PROFILE}/${MY_PROFILE}/${DEV_BASE_GITKEEP}" \
    "${DEV_PATH_VAULT}/${DEV_BASE_PROFILE}/${MY_PROFILE}/${DEV_BASE_GITKEEP}"
}

function dev_initialize() {
  bl64_dbg_app_show_function
  bl64_msg_show_about
  bl64_check_parameter 'MY_PROFILE'
}

[[ -n "$DEV_CICD_DEBUG" ]] && bl64_dbg_all_enable
bl64_lib_script_version_set '2.1.1'
bl64_msg_help_about_set 'Create profile directory structure'
bl64_msg_all_enable_verbose && dev_initialize || exit $?

bl64_msg_show_batch_start "$BL64_SCRIPT_ID"
dev_create
bl64_msg_show_batch_finish $? "$BL64_SCRIPT_ID"
