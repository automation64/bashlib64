# shellcheck source=bin/dev-set
source ./bin/dev-set || { echo 'dev-set:Error: unable to load dev environment' 2>&1 && exit 1; }
# shellcheck source-path=/opt/bl64
source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-arc.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-fs.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-txt.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-xsv.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-fmt.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-bsh.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-core.bash" || exit 1
# shellcheck source-path=bin
source ./bin/dev-env-project || exit 1

function my_prepare() {
  bl64_dbg_app_show_function
  local file_mode='0755'
  bl64_msg_show_task 'gather distributable package content'
  bl64_fs_path_copy \
    "$file_mode" "$BL64_VAR_DEFAULT" "$BL64_VAR_DEFAULT" "$BL64_VAR_DEFAULT" \
    "$DEV_PACK_PROJECT_PATH_STAGING" \
    "$DEV_BUILD_PROJECT_PATH_TARGET"/*
}

function my_create_modular() {
  bl64_dbg_app_show_function
  bl64_msg_show_task 'create modular distributable bundle'
  # shellcheck disable=SC2086
  cd "$DEV_PACK_PROJECT_PATH_STAGING" &&
    bl64_arc_run_tar \
      czf "${DEV_PACK_PROJECT_PATH_TARGET}/${DEV_PACK_PROJECT_BUNDLE_MODULAR}" \
      $BL64_ARC_SET_TAR_VERBOSE \
      "$DEV_PACK_PROJECT_ASSETS_MODULE"-*.bash
}

function my_create_split() {
  bl64_dbg_app_show_function
  bl64_msg_show_task 'create split distributable bundle'
  # shellcheck disable=SC2086
  cd "$DEV_PACK_PROJECT_PATH_STAGING" &&
    bl64_arc_run_tar \
      czf "${DEV_PACK_PROJECT_PATH_TARGET}/${DEV_PACK_PROJECT_BUNDLE_SPLIT}" \
      $BL64_ARC_SET_TAR_VERBOSE \
      "$DEV_PACK_PROJECT_ASSETS_CORE" "$DEV_PACK_PROJECT_ASSETS_OPT"
}

function my_create_sa() {
  bl64_dbg_app_show_function
  bl64_msg_show_task 'create stand-alone distributable bundle'
  # shellcheck disable=SC2086
  cd "$DEV_PACK_PROJECT_PATH_STAGING" &&
    bl64_arc_run_tar \
      czf "${DEV_PACK_PROJECT_PATH_TARGET}/${DEV_PACK_PROJECT_BUNDLE_SA}" \
      $BL64_ARC_SET_TAR_VERBOSE \
      "$DEV_PACK_PROJECT_ASSETS_SA"
}

function my_pack() {
  bl64_dbg_app_show_function
  my_prepare &&
    my_create_sa &&
    my_create_split &&
    my_create_modular
}

function my_initialize() {
  bl64_dbg_app_show_function
  bl64_msg_show_about
  bl64_arc_setup &&
    dev_bin64_build_setup "$DEV_PACK_PROJECT_PATH_TARGET" "$DEV_PACK_PROJECT_PATH_STAGING" &&
    bl64_check_export 'DEV_PACK_PROJECT_BUNDLE_SA' &&
    bl64_check_export 'DEV_PACK_PROJECT_BUNDLE_SPLIT' &&
    bl64_check_export 'DEV_PACK_PROJECT_BUNDLE_MODULAR' &&
    dev_bin64_task_show_setup \
      'DEV_BUILD_PROJECT_PATH_OUTPUT' \
      'DEV_PACK_PROJECT_PATH_TARGET' \
      'DEV_PACK_PROJECT_PATH_CHECKSUM'
}

bl64_lib_script_version_set '1.0.0'
bl64_msg_help_about_set 'Pack application for release'
dev_bin64_initialize && my_initialize || exit $?

bl64_msg_show_batch_start "$BL64_SCRIPT_ID"
my_pack
bl64_msg_show_batch_finish $? "$BL64_SCRIPT_ID"
