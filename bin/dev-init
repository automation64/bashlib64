export DEV_PROFILE="${DEV_PROFILE:-none}"
# Set the requested profile before sourcing devbin64
declare MY_PROFILE="${1:-${DEV_PROFILE}}"
DEV_PROFILE="${MY_PROFILE}"

# shellcheck source=bin/dev-set
source ./bin/dev-set || { echo 'dev-set:Error: unable to load dev environment' 2>&1 && return 1; }

function dev_create() {
  [[ "${DEV_PROFILE}" == 'none' ]] && return 0
  [[ -d "${DEV_PATH_ETC}/${DEV_BASE_PROFILE}/${DEV_PROFILE}" ]] && return 0
  ./bin/dev-profile-create
}

function dev_show() {
  echo "Development environment initialized:
  DEV_PROFILE: ${DEV_PROFILE}
  DEV_PATH_ROOT: ${DEV_PATH_ROOT}
  DEV_PATH_SRC: ${DEV_PATH_SRC}
  DEV_PATH_BUILD: ${DEV_PATH_BUILD}
  DEV_PATH_BIN: ${DEV_PATH_BIN}"
}

function dev_initialize() {
  :
}

[[ -n "$DEV_CICD_DEBUG" ]] && set -x

dev_initialize &&
  dev_create &&
  dev_show &&
  unset dev_initialize &&
  unset dev_create &&
  unset dev_show
