# shellcheck source=bin/dev-set
source ./bin/dev-set || { echo 'dev-set:Error: unable to load dev environment' 2>&1 && exit 1; }
# shellcheck source-path=/opt/bl64
source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-fs.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-txt.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-xsv.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-fmt.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-bsh.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-core.bash" || exit 1
# shellcheck source-path=bin
source ./bin/dev-env-project || exit 1

declare MY_BUILD_SA="${DEV_BUILD_PROJECT_PATH_TARGET}/${DEV_PACK_PROJECT_ASSETS_SA}"
declare MY_BUILD_CORE="${DEV_BUILD_PROJECT_PATH_TARGET}/${DEV_PACK_PROJECT_ASSETS_CORE}"
declare MY_BUILD_OPT="${DEV_BUILD_PROJECT_PATH_TARGET}/${DEV_PACK_PROJECT_ASSETS_OPT}"
declare MY_BUILD_MODULE_CORE="${DEV_BUILD_PROJECT_PATH_TARGET}/${DEV_PACK_PROJECT_ASSETS_MODULE_CORE}"

function my_build_merge_main() {
  bl64_msg_show_task 'adding main'
  # shellcheck disable=SC2119
  { "$BL64_OS_CMD_CAT" "bl64-lib-main.bash" && echo; } >>"$MY_BUILD_SA" &&
    { "$BL64_OS_CMD_CAT" "bl64-lib-main.bash" && echo; } >>"$MY_BUILD_CORE" &&
    { "$BL64_OS_CMD_CAT" "bl64-lib-main.bash" && echo; } >>"$MY_BUILD_MODULE_CORE" &&
    bl64_fs_run_chmod '0755' \
      "$MY_BUILD_SA" \
      "$MY_BUILD_MODULE_CORE" \
      "$MY_BUILD_CORE" \
      "$MY_BUILD_OPT" ||
    return $?
}

function dev_build_merge_module() {
  bl64_dbg_lib_show_function "$@"
  local destination="$1"
  local modules="$2"
  local file=''

  # shellcheck disable=SC2119
  for file in $modules; do
    [[ ! -f "bl64-${file}-env.bash" ]] && continue
    { "$BL64_OS_CMD_CAT" "bl64-${file}-env.bash" && echo; } >>"$destination" ||
      return $?
  done

  # shellcheck disable=SC2119
  for file in $modules; do
    {
      [[ -f "bl64-${file}-setup.bash" ]] && "$BL64_OS_CMD_CAT" "bl64-${file}-setup.bash" && echo
      "$BL64_OS_CMD_CAT" "bl64-${file}.bash" && echo
    } >>"$destination" ||
      return $?
  done
}

function my_build_create_modules() {
  bl64_dbg_lib_show_function
  local build_module=''
  local module_name=''

  bl64_msg_show_task 'adding modules'
  dev_build_merge_module "$MY_BUILD_SA" "${DEV_ENV_PROJECT_MODULES_CORE} ${DEV_ENV_PROJECT_MODULES_OPT}" &&
    dev_build_merge_module "$MY_BUILD_CORE" "$DEV_ENV_PROJECT_MODULES_CORE" &&
    dev_build_merge_module "$MY_BUILD_OPT" "$DEV_ENV_PROJECT_MODULES_OPT" ||
    return $?

  for module_name in ${DEV_ENV_PROJECT_MODULES_CORE} ${DEV_ENV_PROJECT_MODULES_OPT}; do
    build_module="${DEV_BUILD_PROJECT_PATH_TARGET}/${DEV_PACK_PROJECT_ASSETS_MODULE}-${module_name}.bash"
    dev_build_merge_module "${build_module}.tmp" "$module_name"
    {
      "$BL64_OS_CMD_CAT" 'bl64-lib-header.bash' &&
        echo &&
        "$BL64_OS_CMD_CAT" "${build_module}.tmp"
    } >"$build_module" &&
      bl64_fs_run_chmod '0755' "$build_module" ||
      return $?
    bl64_fs_path_remove "${build_module}.tmp"
  done
}

function dev_build_merge_core() {
  bl64_dbg_lib_show_function
  "$BL64_OS_CMD_CAT" "bl64-lib-header.bash" &&
    echo &&
    "$BL64_OS_CMD_CAT" "bl64-lib-bootstrap.bash" &&
    echo &&
    "$BL64_OS_CMD_CAT" "bl64-lib-env.bash" &&
    "$BL64_OS_CMD_CAT" "bl64-lib.bash"
}

function my_build_create_header() {
  # Create header
  bl64_msg_show_task 'creating library header'
  # shellcheck disable=SC2119
  dev_build_merge_core >"$MY_BUILD_SA" &&
    bl64_fs_run_cp "$BL64_FS_SET_CP_FORCE" "$MY_BUILD_SA" "$MY_BUILD_CORE" &&
    bl64_fs_run_cp "$BL64_FS_SET_CP_FORCE" "$MY_BUILD_SA" "$MY_BUILD_MODULE_CORE" ||
    return $?
  # shellcheck disable=SC2119
  {
    "$BL64_OS_CMD_CAT" "bl64-lib-header.bash" && echo
  } >"$MY_BUILD_OPT" || return 1
}

function my_build() {
  bl64_dbg_app_show_function
  cd "$DEV_BUILD_PROJECT_PATH_SOURCE" &&
    my_build_create_header &&
    my_build_create_modules &&
    my_build_merge_main
}

function my_initialize() {
  bl64_dbg_app_show_function
  bl64_msg_show_about
  dev_bin64_build_setup "$DEV_BUILD_PROJECT_PATH_TARGET" &&
    dev_bin64_task_show_setup \
      'DEV_BUILD_PROJECT_PATH_SOURCE' \
      'DEV_BUILD_PROJECT_PATH_TARGET' \
      'DEV_ENV_PROJECT_MODULES_CORE' \
      'DEV_ENV_PROJECT_MODULES_OPT'
}

bl64_lib_script_version_set '1.0.0'
bl64_msg_help_about_set 'Build application in staging area'
dev_bin64_initialize && my_initialize || exit $?

bl64_msg_show_batch_start "$BL64_SCRIPT_ID"
my_build
bl64_msg_show_batch_finish $? "$BL64_SCRIPT_ID"
