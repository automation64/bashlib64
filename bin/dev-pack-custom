#
# Imports
#

# shellcheck source=bin/dev-set
source ./bin/dev-set || { echo 'dev-set:Error: unable to load dev environment' 2>&1 && exit 1; }
# shellcheck source-path=bin
source ./bin/dev-env-custom || exit 1
# shellcheck source-path=lib/bl64
source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-txt.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-arc.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-fmt.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-fs.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-core.bash" || exit 1

#
# Functions
#

function dev_pack_custom() {
  bl64_dbg_app_show_function
  bl64_fs_rm_full "$DEV_PACK_CUSTOM_STORE"
  bl64_fs_create_dir "$BL64_VAR_DEFAULT" "$BL64_VAR_DEFAULT" "$BL64_VAR_DEFAULT" "$DEV_PACK_CUSTOM_STORE" ||
    return $?

  cd "$DEV_BUILD_CUSTOM_FULL_PATH_RELEASE"
  bl64_msg_show_task "create stand-alone distributable package (${DEV_PACK_CUSTOM_NAME_SA})"
  bl64_arc_run_tar \
    zcf \
    "${DEV_PACK_CUSTOM_STORE}/${DEV_PACK_CUSTOM_NAME_SA}" \
    "$DEV_BUILD_CUSTOM_NAME_SA" ||
    return $?

  bl64_msg_show_task "create core+opt alternative distributable package (${DEV_PACK_CUSTOM_NAME_SPLIT})"
  bl64_arc_run_tar \
    zcf \
    "${DEV_PACK_CUSTOM_STORE}/${DEV_PACK_CUSTOM_NAME_SPLIT}" \
    "$DEV_BUILD_CUSTOM_NAME_CORE" "$DEV_BUILD_CUSTOM_NAME_OPT" ||
    return $?

  bl64_msg_show_task "create modular alternative distributable package (${DEV_PACK_CUSTOM_NAME_MODULAR})"
  bl64_arc_run_tar \
    zcf \
    "${DEV_PACK_CUSTOM_STORE}/${DEV_PACK_CUSTOM_NAME_MODULAR}" \
    ${DEV_BUILD_CUSTOM_NAME_MODULE}-*.bash
}

function dev_pack_initialize() {
  bl64_dbg_app_show_function
  bl64_arc_setup &&
    bl64_check_export 'DEV_PACK_CUSTOM_NAME_SA' &&
    bl64_check_export 'DEV_PACK_CUSTOM_NAME_SPLIT' &&
    bl64_check_export 'DEV_PACK_CUSTOM_NAME_MODULAR' &&
    bl64_check_export 'DEV_PACK_CUSTOM_STORE' &&
    bl64_check_export 'DEV_BUILD_CUSTOM_FULL_PATH_RELEASE' &&
    bl64_check_directory "$DEV_BUILD_CUSTOM_FULL_PATH_RELEASE"
}

#
# Main
#

[[ -n "$DEV_CICD_DEBUG" ]] && bl64_dbg_all_enable

bl64_msg_all_enable_verbose
bl64_msg_show_batch_start 'dev-pack-custom'
dev_pack_initialize &&
  dev_pack_custom
bl64_msg_show_batch_finish $? 'dev-pack-custom'
