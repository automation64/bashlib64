#
# Module parameters
#
# * Use .dev.env file to override values
#

# shellcheck disable=SC2154
{
  # Test / Act / List of workflows. Format: job-id, separated by spaces
  export DEV_TEST_ACT_WORKFLOWS="${DEV_TEST_ACT_WORKFLOWS:-}"

  # Test / Act / Max concurrent jobs
  export DEV_TEST_ACT_JOBS_MAX="${DEV_TEST_ACT_JOBS_MAX:-2}"
}

#
# Locals
#
# * Use .local.env file or CICD variables to override values
#

# shellcheck disable=SC2154
{
  # Lib / Act / Skip installation?
  export DEV_LIB_ACT_SKIP='YES'
  # Lib / Act / Target
  export DEV_LIB_ACT_TARGET="${DEV_PATH_LIB}/act"
  # Lib / Act / Command
  export DEV_LIB_ACT_BIN="${DEV_LIB_ACT_BIN:-}"
  if [[ -z "$DEV_LIB_ACT_BIN" ]]; then
    DEV_LIB_ACT_BIN="$(bl64_bsh_command_locate_user 'act')"
    if [[ -z "$DEV_LIB_ACT_BIN" ]]; then
      DEV_LIB_ACT_BIN="${DEV_LIB_ACT_TARGET}/act"
      if [[ ! -x "${DEV_LIB_ACT_BIN}" ]]; then
      DEV_LIB_ACT_SKIP='NO'
      fi
    fi
  fi
}

#
# Internal variables
#
# * Shared internal variables for module tasks
#

# shellcheck disable=SC2154
{
  # Env / Act / Module environment definition version
  export DEV_ENV_ACT_VERSION='1.1.1'

  # Lib / Act / Installer
  export DEV_LIB_ACT_INSTALLER="${DEV_LIB_INSTALLER64_TARGET}/install-act"
}
